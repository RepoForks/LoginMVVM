<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context="com.example.shahbazahmed.loginmvvmdatabinding.ForgotPasswordActivity">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="78dp"
        android:text="FORGOT PASSOWORD?"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_register_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Please enter your registered email" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="YOUR EMAIL"
        app:met_baseColor="@color/white"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="16sp"
        app:met_iconLeft="@drawable/ic_email_white_24dp"
        app:met_primaryColor="@color/colorAccent" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_reset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:padding="12dp"
        android:text="RESET PASSWORD"
        android:textColor="@color/textDark" />

</LinearLayout>
